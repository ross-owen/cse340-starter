<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <a title="Update account information" href="/account/update/<%= accountData.account_id%>">Update Account Information</a>
    <% if (accountData.account_type !== 'Client') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/" title="Click to go to inventory management">Manage Inventory</a></p>
    <% } %>
</div>